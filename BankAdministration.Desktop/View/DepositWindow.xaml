<Window x:Class="BankAdministration.Desktop.View.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankAdministration.Desktop.View"
        xmlns:vModel="clr-namespace:BankAdministration.Desktop.VModel"
        mc:Ignorable="d"
        Title="DepositWindow" Height="130" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Amount of deposit." />
                <TextBox x:Name="textbox" Width="150" Height="20" VerticalAlignment="Center" Text="{Binding DepositAmount}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Width="50"  Height="21" Margin="5" Content="Yes" Command="{Binding YesCommand}" />
                <Button Width="50"  Height="21" Margin="5" Content="No" Command="{Binding NoCommand}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
